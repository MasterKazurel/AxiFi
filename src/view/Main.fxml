<BorderPane fx:id="root" prefHeight="650.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.MainController">
	<center>
		<AnchorPane minHeight="600.0" minWidth="600.0" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
			<children>
				<VBox layoutX="236.0" layoutY="200.0" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<children>
						<HBox prefHeight="30.0" prefWidth="200.0">
							<children>
								<Button fx:id="newAccBtn" mnemonicParsing="false" onAction="#makeAccount" prefHeight="27.0" prefWidth="179.0" text="Create New Account">
									<HBox.margin>
										<Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="delAccBtn" mnemonicParsing="false" onAction="#deleteAccount" prefHeight="27.0" prefWidth="154.0" text="Delete Account">
