								<TableColumn fx:id="dateCol" prefWidth="180.0" text="Date" />
								<TableColumn fx:id="amountCol" prefWidth="198.0" text="Transaction" />
								<TableColumn fx:id="descripCol" prefWidth="221.0" text="Amount" />
							</columns>
							<VBox.margin>
								<Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
							</VBox.margin>
						</TableView>
						<HBox prefHeight="58.0" prefWidth="600.0" style="-fx-background-color: #FFC300;">
							<children>
								<SplitPane orientation="VERTICAL" prefHeight="80.0" prefWidth="227.0">
									<items>
										<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="55.0" prefWidth="225.0">
											<children>
                                    <Label layoutX="-6.0" layoutY="-1.0" prefHeight="27.0" prefWidth="225.0" text="Overall Balance:">
