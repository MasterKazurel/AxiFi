<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.MenuButton?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="600.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.NewTransactionController">
	<children>
		<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<MenuButton fx:id="transTypeMenu" alignment="CENTER" mnemonicParsing="false" text="Type of transaction">
					<items>
						<MenuItem fx:id="depositItm" mnemonicParsing="false" onAction="#switchTransType" text="Deposit" />
						<MenuItem fx:id="withdrawItm" mnemonicParsing="false" onAction="#switchTransType" text="Withdrawal" />
					</items>
					<VBox.margin>
						<Insets top="25.0" />
					</VBox.margin>
				</MenuButton>
            <Label text="Date">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Label>
            <DatePicker>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </DatePicker>
				<Label fx:id="amountLbl" text="Amount">
					<VBox.margin>
						<Insets top="50.0" />
					</VBox.margin>
				</Label>
				<TextField fx:id="amountFld">
					<VBox.margin>
						<Insets left="100.0" right="100.0" top="10.0" />
					</VBox.margin>
				</TextField>
				<Label fx:id="methodLbl" text="Method">
					<VBox.margin>
						<Insets top="40.0" />
					</VBox.margin>
				</Label>
				<MenuButton fx:id="paymentMenu" mnemonicParsing="false" text="Payment method">
					<items>
						<MenuItem fx:id="creditItm" mnemonicParsing="false" onAction="#switchPayment" text="Credit Card" />
						<MenuItem fx:id="checkItm" mnemonicParsing="false" onAction="#switchPayment" text="Check" />
					</items>
					<VBox.margin>
						<Insets top="5.0" />
					</VBox.margin>
				</MenuButton>
				<HBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0">
					<children>
						<Label fx:id="actualAmountLbl" prefHeight="20.0" prefWidth="200.0" text="">
							<HBox.margin>
								<Insets top="35.0" />
							</HBox.margin>
						</Label>
						<Label fx:id="actualAmountValLbl" prefHeight="20.0" prefWidth="50.0" text="0.0">
							<HBox.margin>
								<Insets top="35.0" />
							</HBox.margin>
						</Label>
					</children>
				</HBox>
				<HBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0">
					<children>
						<Label fx:id="amountHeldLbl" prefHeight="20.0" prefWidth="200.0" text="Amount held for fees:">
							<HBox.margin>
								<Insets top="35.0" />
							</HBox.margin>
						</Label>
						<Label fx:id="amountHeldValLbl" prefHeight="20.0" prefWidth="50.0" text="0.0">
							<HBox.margin>
								<Insets top="35.0" />
							</HBox.margin>
						</Label>
					</children>
				</HBox>
				<Button fx:id="submitBtn" mnemonicParsing="false" onAction="#submit" text="Submit">
					<VBox.margin>
						<Insets left="450.0" top="200.0" />
					</VBox.margin>
				</Button>
			</children>
		</VBox>
	</children>
</AnchorPane>
