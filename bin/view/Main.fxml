<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="control.MainController" minHeight="600.0"
	minWidth="600.0" prefHeight="600.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox layoutX="236.0" layoutY="200.0" prefHeight="600.0"
			prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<children>
				<HBox prefHeight="30.0" prefWidth="200.0"
					style="-fx-background-color: #FFC300;">
					<children>
						<Button fx:id="newAccBtn" onAction="#handleAction" mnemonicParsing="false" text="Create New Account">
							<HBox.margin>
								<Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="delAccBtn" onAction="#handleAction" mnemonicParsing="false" text="Delete An Account">
							<HBox.margin>
								<Insets left="120.0" right="85.0" top="5.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="logoutBtn" onAction="#handleAction" mnemonicParsing="false" text="Logout">
							<HBox.margin>
								<Insets left="80.0" right="5.0" top="5.0" />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
				<HBox prefHeight="25.0" prefWidth="200.0"
					style="-fx-background-color: #FFC300;">
					<children>
						<SplitMenuButton mnemonicParsing="false"
							text="Select an account" textOverrun="CLIP">
							<items>
								<MenuItem mnemonicParsing="false" text="Trish Duce" />
								<MenuItem mnemonicParsing="false" text="Michael Cassens" />
								<MenuItem mnemonicParsing="false" text="Oliver Serang" />
								<MenuItem mnemonicParsing="false" text="Rob Smith" /> 
							</items>
							<HBox.margin>
								<Insets left="5.0" />
							</HBox.margin>
						</SplitMenuButton>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</HBox>
				<TableView fx:id="transTable" prefHeight="550.0"
					prefWidth="200.0">
					<columns>
						<TableColumn fx:id="dateCol" prefWidth="180.0" text="Date" />
						<TableColumn fx:id="amountCol" prefWidth="198.0" text="Transaction" />
						<TableColumn fx:id="descripCol" prefWidth="221.0" text="Amount" />
					</columns>
					<VBox.margin>
						<Insets top="10.0" left="30.0" right="30.0" bottom="10.0"/>
					</VBox.margin>
				</TableView>
				<HBox prefHeight="100.0" prefWidth="200.0"
					style="-fx-background-color: #FFC300;">
					<children>
						<SplitPane dividerPositions="0.5" orientation="VERTICAL"
							prefHeight="80.0" prefWidth="227.0">
							<items>
								<AnchorPane minHeight="0.0" minWidth="0.0"
									prefHeight="100.0" prefWidth="160.0">
									<children>
										<TextArea layoutX="-14.0" layoutY="-10.0" prefHeight="48.0"
											prefWidth="242.0" text="Overall Balance:">
											<opaqueInsets>
												<Insets />
											</opaqueInsets>
											<padding>
												<Insets left="10.0" top="10.0" />
											</padding>
										</TextArea>
									</children>
								</AnchorPane>
								<AnchorPane minHeight="0.0" minWidth="0.0"
									prefHeight="14.0" prefWidth="158.0">
									<children>
										<TextArea layoutX="-13.0" layoutY="-10.0" prefHeight="48.0"
											prefWidth="242.0" text="Held for fees: ">
											<padding>
												<Insets left="10.0" top="10.0" />
											</padding>
										</TextArea>
									</children>
								</AnchorPane>
							</items>
							<HBox.margin>
								<Insets bottom="5.0" left="5.0" top="5.0" />
							</HBox.margin>
						</SplitPane>
						<Button fx:id="newTransBtn" onAction="#handleAction" mnemonicParsing="false" text="Add Transaction">
							<HBox.margin>
								<Insets left="210.0" top="25.0" />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
</AnchorPane>
