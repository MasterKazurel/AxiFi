<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #212F3C;">
         <children>
            <ImageView fitHeight="150.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../axifi%20logo.png" />
               </image>
               <VBox.margin>
                  <Insets left="175.0" right="175.0" top="25.0" />
               </VBox.margin>
            </ImageView>
            <Label alignment="CENTER" text="Please log in " textFill="#ff5733">
               <font>
                  <Font name="Rockwell" size="24.0" />
               </font>
               <padding>
                  <Insets left="225.0" right="200.0" top="25.0" />
               </padding>
               <effect>
                  <Blend />
               </effect>
            </Label>
            <TextField layoutX="200.0" onKeyPressed="// key press stuff" onKeyTyped="// key typed" onMouseClicked="// clicked - should select" prefWidth="300.0" promptText="Username">
               <VBox.margin>
                  <Insets bottom="75.0" left="100.0" right="100.0" top="25.0" />
               </VBox.margin>
            </TextField>
            <PasswordField onKeyTyped="//typed here" promptText="Password">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </PasswordField>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="//do something" prefWidth="75.0" text="Log in" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="25.0" left="260.0" right="100.0" top="25.0" />
               </VBox.margin>
            </Button>
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets left="243.0" right="243.0" top="125.0" />
               </VBox.margin>
               <image>
                  <Image url="@../../../cyberdyne.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </children>
</AnchorPane>
